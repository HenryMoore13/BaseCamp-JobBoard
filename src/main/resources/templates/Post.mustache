<html>

<head>
    <title>Job Post</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="/home/basecamp/web_dev/vscode-java/basecampnomination/css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <noscript> <link rel="stylesheet" href="/css/noscript.css" /></noscript>
</head>
<style>
    #nav {
        background-color: #3b1b0C;

    }
    body{
        background-color: #D1D1D1;
    }
    #image {
        vertical-align: middle;
    }

    #info {
        margin: 1rem 8rem 0rem 8rem;
    }

    img {
        width: 100%;
    }
    .container-lg {
        background-image: url("https://basecampcodingacademy.org/images/header-background.jpg");
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
    }
    .nav-link {
        color: #999898;
    }
    #pics{
        width: 13rem;
        height: 13rem;
    }
    #card{
        background-color: white;
        width: 65%;
    }
    #card2{
        background-color: white;
        width: 65%;
    }
    #card3{
        background-color: white;
        width: 65%;

    }
    #comm{
        list-style: none;
        width: 95%
    }
    #date{
        color: grey;
    }
    #home{
        background-color: white;
    }
    @media only screen and (max-width: 880.5px) {
        body{
            width: 100%;
            padding: 0px;
        }

        #info {
            font-size: .8rem;
            width: 97%;
            margin: 1rem .5rem 0rem .5rem;
        }

        #info h1 {
            font-size: 1.3rem;
        }

        #nav *{
            font-size: 1rem;
            margin: 0rem;

        }
        #list {
            margin: 0rem;
            display: flex;
        }
        #li{
            display: flex;
        }


    }


</style>

<body>
<div class="container-lg">
    <div class="col-12 row">
        <a href="/"><button id="home" class="btn border border-dark rounded">Home</button></a>
        <a class="my-5 mx-auto" href="#"><img id="image" src="https://basecampcodingacademy.org/images/header-logo.png" ></a>

    </div>
</div>

<div>
    {{#posting}}
        <div  class="container justify-content-center d-flex">
            <div id="card" class="border border-dark rounded p-3 mb-3">
                <div class="d-flex">
                    <div>
                        <img id="pics" src="{{imageURL}}">
                        <p id="date">Posted on: {{PostDate}}</p>
                    </div>

                    <div class="ml-5">
                        <h1>{{CompanyName}}</h1>
                        <h3>{{JobPosition}}</h3>
                        <h4 id="location">{{Location}}</h4>
                    </div>
                </div>
                <div>
                    <div>
                       <h4 id="date">Team / Group</h4>
                        <p>{{Industry}}</p>
                    </div>
                    <div>
                        <h4 id="date">Employment Type</h4>
                        <p>{{EmploymentType}}</p>
                    </div>
                    <div>
                        <h4 id="date">Experience Level</h4>
                        <p>{{JobFunction}}</p>
                    </div>
                    <div>
                        <h4 id="date">Job Description</h4>
                        <p>{{Description}}</p>
                    </div>
                </div>
                <div class="container justify-content-center d-flex">
                    <div id="card2" class="border border-dark rounded" style="display:none">
                        <div class="form-group m-3">
                            <label>Comment</label>
                            <input id="input" required class="form-control" type="text" name="comment">
                            <a href="#"><button id="submit1" class="btn" type="submit">Submit</button></a>
                        </div>
                    </div>

                </div>
                <div>
                    <button class="btn" id="comment">Comment</button>
                    <button class="btn" id="views" >View Comments</button>
                </div>
            </div>
        </div>
    {{/posting}}
    <div class="container justify-content-center d-flex">
        <div id="card3" class="border border-dark rounded" style="display:none">
            <div>
                <h2>Comments</h2>
                <ul id="list">

                </ul>
                <button id="submit" class="btn">Back</button>
            </div>
        </div>
    </div>




</div>
</body>
<script src="/js/post.js"></script>
</html>